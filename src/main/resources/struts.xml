<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <!-- 指定请求后缀名（.do,.action） -->
    <constant name="struts.action.extension" value="do,action"/>

    <package name="base" extends="struts-default" namespace="/">
        <interceptors>
            <!-- 自定义拦截器 -->
            <interceptor name="commonCheck" class="com.qs.common.interceptor.CommonCheckInterceptor" />
            <!-- 自定义拦截器栈 -->
            <interceptor-stack name="mydefault">
                <interceptor-ref name="commonCheck" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <!-- 这句是设置所有Action自动调用的拦截器堆栈 -->
        <default-interceptor-ref name="mydefault"/>

        <!-- 定义全局Result -->
        <global-results>
            <!-- 当返回error视图名时，转入/error.jsp页面 -->
            <result name="error">error.jsp</result>
        </global-results>

        <action name="indexAction.*" class="com.qs.action.IndexAction" method="{1}">
            <result name="index" type="dispatcher">
                index.jsp
            </result>
        </action>
    </package>

    <include file="struts/struts-login.xml"/>
</struts>